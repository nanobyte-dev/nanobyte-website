{{- $pages := where .Site.RegularPages "Section" "!=" "" -}}
{{- $searchIndex := slice -}}
{{- range $pages -}}
  {{- $content := .Plain | replaceRE "\\s+" " " | replaceRE "\\n" " " | strings.TrimSpace -}}
  {{- $searchIndex = $searchIndex | append (dict
    "title" .Title
    "url" .RelPermalink
    "content" $content
    "section" .Section
  ) -}}
{{- end -}}
{{- dict "pages" $searchIndex | jsonify -}}
